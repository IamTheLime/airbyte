{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Gocardless Spec",
    "type": "object",
    "required": ["access_token", "gocardless_environment", "start_date"],
    "additionalProperties": false,
    "properties": {
      "access_token": {
        "type": "string",
        "pattern": "^(sandbox|live)_[a-zA-Z0-9]+$",
        "description": "Gocardless API TOKEN",
        "airbyte_secret": true
      },
      "gocardless_environment": {
        "type": "string",
        "pattern": "^(live|sandbox)$",
        "description": "Environment you are trying to connect to should be one of [live, sandbox]"
      },
      "start_date": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$",
        "description": "UTC date and time in the format 2017-01-25T00:00:00Z. Any data before this date will not be replicated.",
        "examples": ["2017-01-25T00:00:00Z"]
      }
    }
  }
}
